{
  "name": "space_sim",
  "version": "1.0.0",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:dev": "vite build --mode development --config vite.config.js --outDir dist-dev",
    "prebuild:prod": "node scripts/copy-assets.js",
    "build:prod": "vite build --mode production --config vite.config.prod.js",
    "build:full": "vite build && mkdir -p dist/src/assets && cp -r src/assets/* dist/src/assets/ && mkdir -p dist/assets && cp -r src/assets/* dist/assets/",
    "assets:report": "node scripts/report-assets.js",
    "preview": "vite preview",
    "preview:dev": "vite preview --outDir dist-dev",
    "preview:prod": "vite preview --outDir dist",
    "clean": "rm -rf dist dist-dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jbkc/space-sim.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jbkc/space-sim/issues"
  },
  "homepage": "https://github.com/jbkc/space-sim#readme",
  "dependencies": {
    "@cesium/engine": "^15.0.0",
    "3d-tiles-renderer": "^0.4.7",
    "bottleneck": "^2.19.5",
    "cesium": "^1.127.0",
    "dotenv": "^16.4.7",
    "three": "^0.170.0"
  },
  "description": "The Metaverse of the Universe. In your Browser.",
  "devDependencies": {
    "vite": "^6.2.3",
    "vite-plugin-cesium": "^1.2.23"
  }
}
